<Window x:Class="ExamenParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenParcial"
        mc:Ignorable="d"
        Title="Menu Principal" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="RegistrarButton" Content="Registrar" HorizontalAlignment="Center"  VerticalAlignment="Center" Click="RegistrarButton_Click"/>
        <Button x:Name="ConsultarButton" Content="Consultar" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Center" Click="ConsultarButton_Click"/>

    </Grid>
</Window>
